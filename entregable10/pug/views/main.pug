html
    head
        title='Listado de Productos'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body 
        h1='Listado de Productos'

        div( class="row")
          div( class="col")
            table( class="table table-striped")
                    thead
                        tr
                            th(scope="col")="id"
                            th(scope="col")="Producto"
                            th(scope="col")="Precio"
                            th(scope="col")="Imagen"
                    tbody

                    each producto in listaProductos
                            tr
                                th(scope="row")=producto.id
                                td=producto.title
                                td=producto.price
                                td img(src=producto.thumbnail)

        a(class="btn btn-danger" role="button" href="http://localhost:8080/")="Ingreso de Productos"
        
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous")